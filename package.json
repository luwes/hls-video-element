{
  "name": "@luwes/hls-video-element",
  "version": "0.1.1",
  "description": "Custom element (web component) for playing video using the HTTP Live Streaming (HLS) format. Uses hls.js.",
  "type": "module",
  "main": "dist/hls-video-element.js",
  "files": [
    "src",
    "dist"
  ],
  "repository": "luwes/hls-video-element",
  "author": "Wesley Luyten <me@wesleyluyten.com> (https://wesleyluyten.com)",
  "license": "MIT",
  "homepage": "https://github.com/luwes/hls-video-element#readme",
  "bugs": {
    "url": "https://github.com/luwes/hls-video-element/issues"
  },
  "scripts": {
    "pretest": "npm run build",
    "test": "web-test-runner **/*test.js --node-resolve",
    "dev": "esbuild src/hls-video-element.js --bundle --servedir=. --outdir=dist",
    "build": "esbuild src/hls-video-element.js --bundle --format=esm --sourcemap --minify --outdir=dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "super-media-element": "0.3.0",
    "hls.js": "1.1.5"
  },
  "devDependencies": {
    "@open-wc/testing": "^3.0.3",
    "@web/test-runner": "^0.13.26",
    "esbuild": "^0.15.5",
    "eslint": "^8.10.0",
    "prettier": "^2.5.1"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true
  },
  "eslintConfig": {
    "globals": {
      "globalThis": "writable"
    },
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    }
  },
  "keywords": [
    "HLS",
    "video",
    "player",
    "web component",
    "custom element"
  ]
}
